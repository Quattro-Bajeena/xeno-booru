@model XenoBooru.Web.ViewModels.PostSearchViewModel
@using XenoBooru.Core.Utilities
@{
	ViewData["Title"] = "Maps";
}

@section Stylesheets{
	<link rel="stylesheet" href="~/css/post_index.css" />
}


@section Sidebar{
	<form class="sidebar-section" id="search" asp-controller="Post" asp-action="Index" method="get">
		<h4>Search</h4>
		<input class="search-bar" type="text" name="tags" autocomplete="off" value="@Model.SearchedTagsStr">
	</form>
	<div class="sidebar-section" id="tags">
		<h4>Tags</h4>
		<ul>
			@foreach (Tag tag in Model.Tags.Take(20))
			{
			<li class="tag" id="tag-@tag.Name">
				<a class="tag-@tag.Type" asp-route-tags="@tag.Name">@tag.ToString()</a>&nbsp;<span class="tag-count">@tag.PostCount</span>
			</li>
			}
		</ul>
	</div>
	<div class="sidebar-section" id="options">
		<h4>Options</h4>
		<a asp-action="Upload">Upload</a>
		<form id="post-on-page-form" asp-action="Index" method="get">
			<label for="posts-on-page">Posts on page </label>
			<select id="posts-on-page" name="postsOnPage">
				<option value="25">25</option>
				<option value="50">50</option>
				<option value="100">100</option>
				<option value="-1">All</option>
			</select>
		</form>
	</div>
}


@if (Model.Posts.Count == 0)
{
	<h4>It's okay not to feel `whole'. Even if you feel only partly complete, if you repeat that enough, it'll eventually be `whole'. A part... is better than zero</h4>
}
<ul id="posts">


	@foreach (Post post in Model.Posts)
	{
		<li id="post-@post.Id" class="post-preview">
			<a asp-controller="Post" asp-action="Show" asp-route-id="@post.Id">
				@if (post.Pending)
				{
					<img class="pending" src="@PostUtilities.ThumbnailUrl(Model.ContainerUrl, Model.AudioThumbnailFileName, post)">
				}
				else if (post.Likes > 10)
				{
					<img class="liked" src="@PostUtilities.ThumbnailUrl(Model.ContainerUrl, Model.AudioThumbnailFileName, post)">
				}
				else
				{
					<img src="@PostUtilities.ThumbnailUrl(Model.ContainerUrl, Model.AudioThumbnailFileName, post)">
				}
			</a>
		</li>
	}
</ul>

<div id="paginator">
	@if (Model.CurrentPage > 1)
	{<a class="page-button" asp-route-page="@(Model.CurrentPage-1)" asp-route-postsOnPage="@Model.PostsOnPage">←Previous</a>}
	else
	{<span class="page-button disabled">←Previous</span>}

	@foreach (object pageNum in Model.Pages)
	{
		if (pageNum is int)
		{
			if ((int)pageNum == Model.CurrentPage)
			{<span class="current-page">@pageNum</span>}
			else
			{<a class="page-button" asp-route-page="@pageNum" asp-route-postsOnPage="@Model.PostsOnPage">@pageNum</a>}
		}
		else if (pageNum is string)
		{<span class="page-skip">@pageNum</span>}
	}
	@if (Model.CurrentPage < Model.PageCount)
	{ <a class="page-button" asp-route-page="@(Model.CurrentPage+1)" asp-route-postsOnPage="@Model.PostsOnPage">Next→</a>}
	else 
	{ <span class="page-button disabled">Next→</span>}
			
</div>

@section Scripts{ 
	<script>
		const posts = @Html.Raw(Json.Serialize(Model.Posts));
		const tags = @Html.Raw(Json.Serialize(Model.Tags));
	</script>
	<script src="~/js/tag_highlight_posts.js" type="module"></script>
	<script src="~/js/paging.js" type="module"></script>

}
